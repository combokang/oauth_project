@model IEnumerable<MiddleOffice.Entities.ViewModels.Sso.ProjectInfoListVM>
@{
    ViewData["Title"] = $"首頁";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="card">

        <div class="card-body p-0">
            <div class="card-body p-0">
                <table class="table table-striped table-bordered table-valign-middle">
                    <thead>
                        <tr>
                            <th>專案名稱</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/dist/img/default-150x150.png" class="img-circle img-size-32 mr-2">
                                    <a href=@item.Domain target="_blank">@item.Name</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>